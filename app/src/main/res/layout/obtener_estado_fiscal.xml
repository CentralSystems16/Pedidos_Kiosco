<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ObtenerEstadoFiscal"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#c6391e">

        <ImageButton
            android:id="@+id/regresara"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/regresara"
            android:text="ESTADOS DE AUTORIZACIÃ“N FISCAL"
            android:textColor="#FFFFFF" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:id="@+id/btnFiscalActivo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#c6391e"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACTIVOS"
                android:textColor="@color/white"
                android:fontFamily="@font/rabits"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="5dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/activo" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnVerFiscalInactivo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="#c6391e"
            android:clickable="true"
            android:layout_marginStart="10dp"
            android:focusable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INACTIVOS"
                android:textColor="@color/white"
                android:fontFamily="@font/rabits"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="5dp"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/desactivar" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
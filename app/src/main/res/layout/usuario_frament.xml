<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_user"
    android:layout_height="match_parent"
    tools:context=".usuarios.UsuarioFragment"
    android:background="@color/white">

    <Button
        android:layout_marginTop="50dp"
        android:backgroundTint="#CB3234"
        android:textColor="@color/white"
        android:layout_marginStart="200dp"
        android:id="@+id/usuariosInactivos"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INACTIVOS" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/noHayPermisos"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#388E3C"
        android:layout_marginBottom="10dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_add_24" />

</FrameLayout>
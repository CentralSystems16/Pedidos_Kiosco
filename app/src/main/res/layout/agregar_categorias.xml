<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/agregarCategoria"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context=".categorias.AgregarCategorias">

    <TextView
        android:id="@+id/nuevaCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVA CATEGORIA"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            app:boxStrokeColor="#7D9E34"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="#9F807E7E"
                android:textSize="12sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/imagenNueva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargar imagen:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_menu_camera"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textSize="12sp"
        android:backgroundTint="#7D9E34"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:cornerRadius="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR CATEGORÃA"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:backgroundTint="#7D9E34"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cornerRadius="15dp"/>

</LinearLayout>
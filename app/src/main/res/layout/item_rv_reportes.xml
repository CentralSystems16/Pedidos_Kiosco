<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:backgroundTint="#CFD8DC"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvFecha"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/imgCompletado"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_baseline_check_circle_outline_24"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:text="ORDEN "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/numeroPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombreCliente"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="13sp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/verReporte"
                app:backgroundTint="#607D8B"
                android:textSize="9sp"
                android:background="@drawable/caja_texto_circular"
                android:clickable="true"
                android:text="Ver pedido"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:focusable="true" />

            <Button
                android:id="@+id/anular"
                app:backgroundTint="#607D8B"
                android:textSize="9sp"
                android:layout_marginStart="5dp"
                android:background="@drawable/caja_texto_circular"
                android:clickable="true"
                android:text="Anular orden"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:visibility="gone"
                android:focusable="true" />

            <Button
                android:id="@+id/reenviarCorreo"
                app:backgroundTint="#607D8B"
                android:textSize="9sp"
                android:visibility="gone"
                android:background="@drawable/caja_texto_circular"
                android:clickable="true"
                android:layout_marginStart="5dp"
                android:text="Reenviar correo"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:focusable="true" />

        </LinearLayout>
        </LinearLayout>
 </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:background="#FFFFFF">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UselessParent">

    <LinearLayout
      android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="sans-serif"
            android:text="PROCESO COMPLETADO !!"
            android:textColor="#c6391e"
            android:textSize="20sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRepetirExamen"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#c6391e"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="REALIZAR UN NUEVO PEDIDO"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="#c6391e"
            app:iconSize="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cornerRadius="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#c6391e"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Ver mis ordenes"
            android:textSize="12sp"
            android:textColor="#c6391e"
            app:iconSize="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cornerRadius="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalir"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#c6391e"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Cerrar aplicaciÃ³n"
            android:textSize="12sp"
            android:textColor="#c6391e"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cornerRadius="15dp"/>

    </LinearLayout>
  </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#c6391e">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/homeEnd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/ic_baseline_home_24" />

    </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

</LinearLayout>

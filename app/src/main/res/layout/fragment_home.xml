<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/home"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Home"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.smarteist.autoimageslider.SliderLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/slider"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola "
        android:textSize="20sp"
        android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adiel"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", que necesita?"
            android:textSize="20sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

    <androidx.cardview.widget.CardView
        android:id="@+id/btnPedidos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#E26C5E"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hacer un pedido"
            android:textColor="@color/white"
            android:fontFamily="@font/rabits"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/pedidos" />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnVerPedidos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#9DD8FA"
            android:clickable="true"
            android:layout_marginStart="5dp"
            android:focusable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver pedidos"
                android:textColor="@color/white"
                android:fontFamily="@font/rabits"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ordenes" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnFiscal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#BD8BEA"
            android:clickable="true"
            android:layout_marginStart="5dp"
            android:focusable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear autorizaciÃ³n"
                android:textColor="@color/white"
                android:fontFamily="@font/rabits"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="10dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/activo" />

        </androidx.cardview.widget.CardView>

</LinearLayout>

</LinearLayout>